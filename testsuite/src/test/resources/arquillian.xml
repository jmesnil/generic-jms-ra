<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <container qualifier="jbossas-managed" default="true">
        <configuration>
            <property name="jbossHome">${user.home}/Developer/wildfly/build/target/wildfly-8.0.0.Beta1-SNAPSHOT</property>
            <property name="javaVmArguments">-Djboss.inst=${basedir}/target/jbossas</property>
            <property name="serverConfig">${jboss.server.config.file.name:standalone-full.xml}</property>
            <property name="managementAddress">${node0:127.0.0.1}</property>
            <property name="managementPort">${as.managementPort:9990}</property>

            <!-- AS7-4070 -->
            <property name="waitForPorts">${as.debug.port:8787} ${as.managementPort:9990}</property>
            <property name="waitForPortsTimeoutInSeconds">8</property>
        </configuration>
    </container>
</arquillian>